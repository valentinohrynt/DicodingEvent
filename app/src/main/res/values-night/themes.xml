<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DicodingEvent" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/matte_black</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/matte_black</item>
        <item name="colorOnSurfaceVariant">@color/light_grey</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/matte_black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_dicoding</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.DicodingEvent</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>